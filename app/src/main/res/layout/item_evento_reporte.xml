<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContainerItemEventoReporte"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/first_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/ivItemEventoReporte"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_profesional"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemNroControlEventoReporte"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="N° Control: COD-2023000001"
                    android:textSize="14sp"
                    android:textColor="@color/light"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tvItemNombreEventoReporte"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="Evento: nombre del evento"
                    android:textSize="14sp"
                    android:textColor="@color/light"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivItemVerConcomitanteEventoReporte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_medication"
                    app:tint="@color/light" />

                <ImageView
                    android:id="@+id/ivItemGenerarPdfEventoReporte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_file_pdf"
                    app:tint="@color/light" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemDescripcionEventoReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Descripción del evento que es reportado por las personas, en un máximo de 3 lines."
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/light"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tvItemFechaEventoReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2023/11/20 - 2023/11/20"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:gravity="end"
                android:textColor="@color/light"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>